
@{
    ViewData["Title"] = "Delete Application";
}
@model MovieResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for the movie @Model.Title?</h3>

<form method="post" asp-action="Delete">
    <button type="submit" class="btn-dark">Delete</button>
    <a asp-controller="Home" asp-action="MovieForm" class="btn-dark btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId" />
</form>
